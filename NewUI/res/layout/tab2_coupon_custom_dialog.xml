<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:sl="http://schemas.android.com/apk/res/com.example.newui"
    android:id="@+id/RelativeLayout1"
    android:layout_width="300dp"
    android:layout_height="250dp"
    android:background="#DCDCDC"
    android:orientation="vertical"
    android:padding="10dp"
    android:paddingTop="5dp" >

    <Button
        android:id="@+id/use_button"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:background="#A51E22"
        android:text="사용하기"
        android:textColor="#FFFFFFFF" />

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" >

        <ImageView
            android:id="@+id/sscoupon_1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:src="@drawable/ic_coffee_white_72" />

        <ImageView
            android:id="@+id/sscoupon_2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:src="@drawable/ic_coffee_white_72" />

        <ImageView
            android:id="@+id/sscoupon_3"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:src="@drawable/ic_coffee_white_72" />

        <ImageView
            android:id="@+id/sscoupon_4"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:src="@drawable/ic_coffee_white_72" />

        <ImageView
            android:id="@+id/sscoupon_5"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:src="@drawable/ic_coffee_white_72" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/LinearLayout2"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_above="@+id/use_button"
        android:layout_alignLeft="@+id/use_button"
        android:layout_marginBottom="5dp"
        android:background="#FFFFFFFF"
        android:orientation="vertical"
        android:padding="15dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_weight="1" >

            <ImageView
                android:id="@+id/coupon_1"
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:layout_weight="1"
                android:src="@drawable/dotemptycoupon" />

            <ImageView
                android:id="@+id/coupon_2"
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:layout_weight="1"
                android:src="@drawable/dotemptycoupon" />

            <ImageView
                android:id="@+id/coupon_3"
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:layout_weight="1"
                android:src="@drawable/dotemptycoupon" />

            <ImageView
                android:id="@+id/coupon_4"
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:layout_weight="1"
                android:src="@drawable/dotemptycoupon" />

            <ImageView
                android:id="@+id/coupon_5"
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:layout_weight="1"
                android:src="@drawable/dotemptycoupon" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_weight="1" >

            <ImageView
                android:id="@+id/coupon_6"
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:layout_weight="1"
                android:src="@drawable/dotemptycoupon" />

            <ImageView
                android:id="@+id/coupon_7"
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:layout_weight="1"
                android:src="@drawable/dotemptycoupon" />

            <ImageView
                android:id="@+id/coupon_8"
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:layout_weight="1"
                android:src="@drawable/dotemptycoupon" />

            <ImageView
                android:id="@+id/coupon_9"
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:layout_weight="1"
                android:src="@drawable/dotemptycoupon" />

            <ImageView
                android:id="@+id/coupon_10"
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:layout_weight="1"
                android:src="@drawable/dotemptycoupon" />

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>