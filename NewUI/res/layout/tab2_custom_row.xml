<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >


    <RelativeLayout 
        android:id="@+id/front"
        android:layout_width="fill_parent"
        android:layout_height="140dp"
        android:orientation="vertical"
        android:tag="front" >

        <TextView
            android:id="@+id/tv_branch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="5dp"
            android:textColor="#99FFFFFF"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/tv_brand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/tv_branch"
            android:layout_alignLeft="@+id/tv_branch"
            android:textColor="#D2FFFFFF" 
            android:textSize="20dp" />

        <TextView
            android:id="@+id/tv_coupontotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tv_branch"
            android:layout_alignBottom="@+id/tv_branch"
            android:layout_alignParentRight="true" 
            android:layout_marginRight="32dp"
            android:textColor="#D2FFFFFF"
            android:textSize="15dp" />

    </RelativeLayout>

</FrameLayout>