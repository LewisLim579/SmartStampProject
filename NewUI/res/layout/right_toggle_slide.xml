<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="180dp"
    android:layout_height="fill_parent"
    android:background="@drawable/rightsidecorner"

    android:orientation="vertical" >

    <TableLayout
        android:id="@+id/userinfotable_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
         android:background="@drawable/rightsidecorner"
         
        android:stretchColumns="0" >

        <TableRow android:gravity="center_vertical"
            android:id="@+id/right_myinfo" >

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/tv_myid"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:layout_marginLeft="20dp"
                    android:gravity="center_vertical"
                    android:text="내 정보 "
                    android:textColor="#696969" />
            </RelativeLayout>
        </TableRow>

        <TableRow>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dip"
                android:background="#A9A9A9" />
        </TableRow>

        <TableRow android:gravity="center_vertical"
            android:id="@+id/right_notice" >

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:layout_marginLeft="20dp"
                    android:gravity="center_vertical"
                    android:text="공지사항"
                    android:textColor="#696969" />
            </RelativeLayout>
        </TableRow>

        <TableRow>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dip"
                android:background="#A9A9A9" />
        </TableRow>

        <TableRow android:gravity="center_vertical" 
            android:id="@+id/right_customer">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:layout_marginLeft="20dp"
                    android:gravity="center_vertical"
                    android:text="고객센터"
                    android:textColor="#696969" />
            </RelativeLayout>
        </TableRow>

        <TableRow>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dip"
                android:background="#A9A9A9" />
        </TableRow>

        <TableRow android:gravity="center_vertical"
            android:id="@+id/right_version" >

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:layout_marginLeft="20dp"
                    android:gravity="center_vertical"
                    android:text="버전정보"
                    android:textColor="#696969" />
            </RelativeLayout>
        </TableRow>

        <TableRow>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dip"
                android:background="#A9A9A9" />
        </TableRow>

        <TableRow android:gravity="center_vertical"
            android:id="@+id/right_finish" >

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:layout_marginLeft="20dp"
                    android:gravity="center_vertical"
                    android:text="종료"
                    android:textColor="#696969" />
            </RelativeLayout>
        </TableRow>
    </TableLayout>

    <ImageView
        android:id="@+id/imageView1"
        android:layout_margin="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/rightlogo" />

</LinearLayout>